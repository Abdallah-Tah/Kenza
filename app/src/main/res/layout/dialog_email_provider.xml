<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Email Provider"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMicrosoft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="Microsoft"
        app:icon="@drawable/ic_microsoft"
        app:iconGravity="start" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonGmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="Gmail"
        app:icon="@drawable/ic_gmail"
        app:iconGravity="start" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonYahoo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="Yahoo"
        app:icon="@drawable/ic_yahoo"
        app:iconGravity="start" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="Custom Email"
        app:icon="@drawable/ic_email"
        app:iconGravity="start"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
</LinearLayout>